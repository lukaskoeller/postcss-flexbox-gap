{
  "name": "postcss-flexbox-gap",
  "version": "0.0.5",
  "description": "PostCSS plugin for single line flexbox gap",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "postcss-flexbox-gap"
  ],
  "scripts": {
    "test": "jest --coverage && eslint .",
    "release": "standard-version",
    "publish": "git push --follow-tags origin main && npx clean-publish"
  },
  "author": "Lukas Koeller <acc.koeller@protonmail.com>",
  "license": "MIT",
  "repository": "https://github.com/lukaskoeller/postcss-flexbox-gap",
  "engines": {
    "node": ">=12.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.3.0"
  },
  "devDependencies": {
    "clean-publish": "^3.4.2",
    "eslint": "^8.0.1",
    "eslint-plugin-jest": "^25.2.2",
    "jest": "^27.3.1",
    "postcss": "^8.3.11",
    "standard-version": "^9.3.2"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  }
}
